<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ImagenPokemon"
        android:layout_width="100dp"
        android:layout_height="115dp"
        android:layout_weight="0"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Anime"
            android:text="Paisaje"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescripcionPublicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Paisaje" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Latitud:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLatitudPubli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Latitud" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitud:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLongitudPubli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitud" />

    </LinearLayout>

    <Button
        android:id="@+id/btDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Ver Detaller"
        android:visibility="invisible" />

</LinearLayout>